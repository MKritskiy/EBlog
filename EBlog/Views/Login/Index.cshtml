@model LoginViewModel
@{
    ViewData["Title"] = "Авторизация";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="text-center mb-4">Авторизация</h2>
                    <form action="/login" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <div class="error">@Html.ValidationMessage("Form")</div>
                        </div>
                        <div class="mb-3">
                            <label for="inputEmail" class="form-label">Почта</label>
                            <input name="Email" type="text" class="form-control" id="inputEmail" value="@Model.Email" placeholder="Введите вашу почту" required>
                            <div class="invalid-feedback d-block">@Html.ValidationMessageFor(m => m.Email)</div>
                        </div>
                        <div class="mb-3">
                            <label for="inputPassword" class="form-label">Пароль</label>
                            <input name="Password" type="password" class="form-control" id="inputPassword" placeholder="Введите пароль" required>
                            <div class="invalid-feedback d-block">@Html.ValidationMessageFor(m => m.Password)</div>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" name="RememberMe" class="form-check-input" id="rememberMe" value="true">
                            <label class="form-check-label" for="rememberMe">Запомнить меня</label>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Авторизоваться</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
