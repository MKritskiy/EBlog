@model EBlog.ViewModels.BlogPageViewModel
@{
    ViewData["Title"] = "Blog page";
}
<section>

    <div class="container my-5 py-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-12 col-lg-10 col-xl-8">
                <div class="card">
                    <div class="card-body">
                        <h1 class="display-4">@Model.BlogViewModel?.BlogHeader</h1>
                        <div class="mt-3 mb-4 pb-2">@Model.BlogViewModel?.BlogContent</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container my-5 py-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-12 col-lg-10 col-xl-8">
                <div class="card">
                    <div class="card-body">              
                        @if (Model.CommentViewModel != null)
                        {
                            @foreach (var comment in Model.CommentViewModel)
                            {
                                <div class="d-flex flex-start align-items-center">
                                    <img class="rounded-circle shadow-1-strong me-3"
                                         src="@comment.ProfileImage" alt="avatar" width="60"
                                    height="60" />
                                    <div>
                                        <h6 class="fw-bold text-primary mb-1">@comment.AuthorName</h6>
                                    </div>
                                </div>
                                <p class="mt-3 mb-4 pb-2">@comment.CommentContent</p>
                            }
                        }
                    </div>
                    <div class="card-footer py-3 border-0" style="background-color: #f8f9fa;">
                        <div class="d-flex flex-start w-100">
                            <div class="form-outline w-100">
                                <form action="/blog/@Model.BlogViewModel?.BlogId/commentpost" method="post">
                                    @Html.AntiForgeryToken()
                                    <p>
                                        <div class="error">@Html.ValidationMessage("Form")</div>
                                    </p>
                                    <input id="CommentContent" name="CommentContent" type="text" class="form-control" placeholder="Type comment..." rows="4" 
                                    style="background: #fff;" />
                                    <div class="float-end mt-2 pt-1">
                                        <button class="btn btn-primary btn-sm">Сохранить</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>
</section>
