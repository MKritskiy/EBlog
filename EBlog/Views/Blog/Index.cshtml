@model BlogViewModel

@{
    if (Model.BlogId != null)
        ViewData["Title"] = "Изменение записи";
    else
        ViewData["Title"] = "Создание записи";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="text-center mb-4">@ViewData["Title"]</h2>
                    <form action="/blogedit" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        <input name="BlogId" type="hidden" value=@Model.BlogId />
                        <div class="mb-3">
                            <div class="error">@Html.ValidationMessage("Form")</div>
                        </div>
                        <div class="mb-3">
                            <label for="inputBlogHeader" class="form-label">Заголовок</label>
                            <input name="BlogHeader" type="text" class="form-control" id="inputBlogHeader" value="@Model.BlogHeader" placeholder="Введите заголовок" required>
                            <div class="invalid-feedback d-block">@Html.ValidationMessageFor(m => m.BlogHeader)</div>
                        </div>
                        <div class="mb-3">
                            <label for="inputBlogContent" class="form-label">Содержимое</label>
                            <textarea name="BlogContent" class="form-control" id="inputBlogContent" rows="6" placeholder="Введите содержимое" required>@Model.BlogContent</textarea>
                            <div class="invalid-feedback d-block">@Html.ValidationMessageFor(m => m.BlogContent)</div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Сохранить</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
